{{!< default}}

{{! The main content area on the homepage }}
<main class="content" role="main">
    
    <div class="row">
    {{! Each post will be output using this markup }}
        {{#foreach posts}}
            <div class="col-md-4">
                <article class="{{post_class}} post-list-item-wrapper">
                    <div class="post-list-item">
                        <header class="codespite_post_header">         
                            <h2 class="codespite_post_title"><a href="{{url}}">{{{title}}}</a></h2>
                            {{#if tags}}Tags {{tags}}{{/if}}</span>
                        </header>
                        <section class="codespite_post_content">
                            {{content words="100"}}
                        </section>
                        <footer class="codespite_post_info">
                        	<span class="codespite_date"><time datetime="{{date format='DD-MMM-YYYY'}}">{{date format="DD MMM YYYY"}}</time></span>
                        	<div class="button">
                        		<a href="{{url}}">{{{title}}}</a>
                        	</div>
                        </footer>
                    </div>
                </article>   
            </div>
        {{/foreach}}
    </div>
    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>